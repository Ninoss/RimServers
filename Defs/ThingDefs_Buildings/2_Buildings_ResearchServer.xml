<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="SERVERS_ServerBase">
    <defName>SERVERS_ResearchServer</defName>
    <label>research server rack</label>
    <description>A rack of servers dedicated to crunching research data. Links to research benches and improves research speed while powered.\n\nResearch speed: +4%\nPower: 600 W\nHeat: med</description>
      <graphicData>
        <texPath>Servers/ResearchServer</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(2,2)</drawSize>
        <shadowData>
          <volume>(1,1,1)</volume>
          <offset>(-0.03,0,-0.1)</offset>
        </shadowData>
        <damageData>
          <rect>(1,1,1,1)</rect>
      </damageData>
    </graphicData>
	
    <rotatable>true</rotatable>
    <stealable>false</stealable>
    <uiIconScale>0.5</uiIconScale>
	
    <statBases>
	    <Mass>22</Mass>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>4000</WorkToBuild>
      <Flammability>0.5</Flammability>
    </statBases>
	
    <size>(1,1)</size>
	
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <Plasteel>30</Plasteel>
    </costList>
	
    <passability>Impassable</passability>
    <fillPercent>0.69</fillPercent>
    <designationHotKey>Misc5</designationHotKey>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>

    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>600</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
    
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(30, 180, 150,0)</glowColor>
      </li>
    
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>2</heatPerSecond>
        <heatPushMaxTemperature>120</heatPushMaxTemperature>
      </li>
        
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.04</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>12</maxSimultaneous>
      </li>  
    </comps>
	
	  <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>
