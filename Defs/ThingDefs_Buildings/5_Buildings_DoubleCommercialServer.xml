<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="SERVERS_ServerBase">
    <defName>SERVERS_DoubleCommercialServer</defName>
    <label>commercial server double-rack</label>
    <description>A larger, more efficient rack of rentable servers. It periodically produces silver when powered.\n\nProduces: 200 silver every 7 days\nPower: 1000 W\nHeat: med-high</description>
      <graphicData>
        <texPath>Servers/DoubleCommercialServer</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(3,3)</drawSize>
        <shadowData>
          <volume>(1,1,1)</volume>
          <offset>(-0.03,0,-0.1)</offset>
        </shadowData>
        <damageData>
          <rect>(1,1,1,1)</rect>
      </damageData>
    </graphicData>
	
    <rotatable>true</rotatable>
    <stealable>false</stealable>
	
    <statBases>
	    <Mass>40</Mass>
      <MaxHitPoints>500</MaxHitPoints>
      <WorkToBuild>10000</WorkToBuild>
      <Flammability>0.5</Flammability>
    </statBases>
	
    <size>(2,1)</size>
	
    <costList>
      <Steel>250</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
      <Gold>50</Gold>
    </costList>
	
    <fillPercent>0.69</fillPercent>
    <designationHotKey>Misc8</designationHotKey>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>

    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1000</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li>
    
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(100, 60, 170,0)</glowColor>
      </li>
    
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>3</heatPerSecond>
        <heatPushMaxTemperature>120</heatPushMaxTemperature>
      </li>

      <li Class="CompProperties_Spawner">
        <thingToSpawn>Silver</thingToSpawn>
        <requiresPower>true</requiresPower>
        <spawnCount>200</spawnCount>
        <spawnIntervalRange><min>420000</min><max>420000</max></spawnIntervalRange>
        <writeTimeLeftToSpawn>true</writeTimeLeftToSpawn>
        <showMessageIfOwned>false</showMessageIfOwned>
      </li>
    </comps>
	
	  <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>
